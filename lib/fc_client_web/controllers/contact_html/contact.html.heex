<!-- Contact Section -->
    <section class="py-16 bg-white">
        <div class="container mx-auto">
            <h1 class="text-3xl font-semibold mb-8 text-center">Contact Us</h1>
            <div class="md:flex md:space-x-8">
                <!-- Contact Form -->
                <div class="md:w-1/2">
                    <form class="bg-gray-200 p-6 rounded-lg">
                        <div class="mb-4">
                            <label for="name" class="block text-gray-600">Name:</label>
                            <input type="text" id="name" name="name" class="w-full border rounded-md py-2 px-3 text-gray-700 focus:outline-none focus:border-blue-500">
                        </div>
                        <div class="mb-4">
                            <label for="email" class="block text-gray-600">Email:</label>
                            <input type="email" id="email" name="email" class="w-full border rounded-md py-2 px-3 text-gray-700 focus:outline-none focus:border-blue-500">
                        </div>
                        <div class="mb-4">
                            <label for="message" class="block text-gray-600">Message:</label>
                            <textarea id="message" name="message" rows="4" class="w-full border rounded-md py-2 px-3 text-gray-700 focus:outline-none focus:border-blue-500"></textarea>
                        </div>
                        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded-full font-semibold transition duration-300">Send</button>
                    </form>
                </div>
                <!-- Contact Information -->
                <div class="md:w-1/2 mt-8 md:mt-0">
                    <div class="bg-gray-200 p-6 rounded-lg">
                        <h2 class="text-xl font-semibold mb-4">Contact Information</h2>
                        <p class="text-gray-700 mb-2">Address: 123 Main Street, City, Zip Code</p>
                        <p class="text-gray-700 mb-2">Phone: (123) 456-7890</p>
                        <p class="text-gray-700">Email: info@cleaningco.com</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

        <div class="container mx-auto">
