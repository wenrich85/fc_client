                <div class="border-b border-gray-300 p-2">00:00</div>
                <div class="border-b border-gray-300 p-2">00:15</div>
                <!-- Add more time slots here -->
                <!-- ... -->
                <div class="border-b border-gray-300 p-2">23:30</div>
                <div class="p-2">23:45</div>
            </div>

            <!-- Appointments for each time slot -->
